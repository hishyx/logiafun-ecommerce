<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile - logiaFun</title>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
<body>
    <!-- Header -->
    <%- include('../partials/header.ejs')%>

    <main>
      <div class="profile-container">
        <!-- Sidebar -->
        <aside class="profile-sidebar">
          <div class="profile-user-info">
            <div class="profile-avatar-large">H</div>
            <div>
              <div class="profile-user-name" id="sidebarName">
                <%=user.name%>
              </div>
              <div class="profilacce-user-email" id="sidebarEmail">
                <%=user.email%>
              </div>
            </div>
          </div>
          <nav class="sidebar-menu">
            <a href="#" class="sidebar-link active">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              Profile
            </a>
            <a href="/user/addresses" class="sidebar-link">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              Addresses
            </a>
            <a href="#" class="sidebar-link">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="1" y="3" width="15" height="13" />
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8" />
                <circle cx="5.5" cy="18.5" r="2.5" />
                <circle cx="18.5" cy="18.5" r="2.5" />
              </svg>
              My Orders
            </a>
            <a href="#" class="sidebar-link">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
                ></path>
              </svg>
              Wishlist
            </a>
            <a href="#" class="sidebar-link">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="2" y="5" width="20" height="14" rx="2" />
                <line x1="2" y1="10" x2="22" y2="10" />
              </svg>
              Wallet
            </a>
            <form action="/user/logout" method="POST" style="display: inline">
              <button type="submit" class="sidebar-link logout-link">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                  <polyline points="16 17 21 12 16 7"></polyline>
                  <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Log Out
              </button>
            </form>
          </nav>
        </aside>

        <!-- Main Content -->
        <section class="profile-content">
          <div class="profile-header">
            <h2>My Profile</h2>
            <button class="btn btn-secondary" id="editInfoButton">
              Edit Information
            </button>
          </div>

          <form class="profile-form" action="/user/profile" method="POST">
            <fieldset id="profileFieldset" disabled>
              <div class="form-row">
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" value="<%=user.name%>" name="name" />
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label>Email Address</label>
                  <div class="input-with-button">
                    <input type="email" value="<%=user.email%>" name="email" />
                    <button
                      type="button"
                      class="btn btn-sm btn-outline"
                      id="changeEmailBtn"
                      disabled
                    >
                      Change
                    </button>
                  </div>
                </div>
                <div class="form-group">
                  <label>Phone Number</label>
                  <input
                    type="tel"
                    placeholder=""
                    value="<%= user.phone || '' %>"
                    name="phone"
                  />
                </div>
              </div>


              <div class="form-row">
                <div class="form-group" style="max-width: 50%">
                  <label>Password</label>
                  <div class="input-with-button">
              <button
  type="button"
  class="btn btn-sm btn-outline open-password-modal"
  disabled
  id="changePasswordBtn"
>
  <%= passExist ? "Change" : "Set password" %>
</button>

                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-primary btn-save">
                Save Changes
              </button>
            </fieldset>
          </form>
        </section>
      </div>
    </main>

<div class="modal-overlay" id="emailModal">
  <div class="modal-content">
    <button class="modal-close" id="closeEmailModal" type="button">&times;</button>

    <% if(passExist) { %>
      <div id="emailStep1">
        <h3>Change Email Address</h3>
        <p style="color: var(--text-muted); margin-bottom: 1.5rem">
          Enter your new email address. We'll send a verification code.
        </p>
        <div class="form-group">
          <label>New Email Address</label>
          <input
            type="email"
            id="newEmailInput"
            placeholder="name@example.com"
          />
        </div>
        <button class="btn btn-primary" style="width: 100%" id="sendOtpBtn">
          Proceed
        </button>
      </div>

      <div id="emailStep2" style="display: none">
        <h3>Verify Email</h3>
        <p style="color: var(--text-muted); margin-bottom: 1.5rem">
          Enter the 6-digit code sent to
          <strong id="displayNewEmail"></strong>
        </p>
        <div class="form-group">
          <label>Verification Code</label>
          <div class="otp-input-container">
            <input type="text" maxlength="1" class="otp-digit" />
            <input type="text" maxlength="1" class="otp-digit" />
            <input type="text" maxlength="1" class="otp-digit" />
            <input type="text" maxlength="1" class="otp-digit" />
            <input type="text" maxlength="1" class="otp-digit" />
            <input type="text" maxlength="1" class="otp-digit" />
          </div>
        </div>
        <button class="btn btn-primary" style="width: 100%" id="verifyOtpBtn">
          Verify & Update
        </button>
        <button class="btn btn-link" id="resendOtpBtn">Resend code</button>
        <button
          class="btn btn-link"
          style="width: 100%; margin-top: 1rem"
          id="backToEmailBtn"
        >
          Back to Email
        </button>
      </div>

    <% } else { %>
      <div style="text-align: center; padding: 20px 0;">
        <h3 style="color: #dc3545;">Security Action Required</h3>
        <p style="color: var(--text-muted); margin: 1rem 0 2rem">
          For your security, you must set an account password before you can change your email address.
        </p>
        <button class="btn btn-primary" style="width: 100%" id="triggerPasswordFromEmail">
          Set Password Now
        </button>
      </div>
    <% } %>
  </div>
</div>

    <!-- Password Change Modal -->
   <div class="modal-overlay" id="passwordModal">
  <div class="modal-content">
    <button class="modal-close" id="closePasswordModal" type="button">&times;</button>
    
    <h3><%= passExist ? 'Change Password' : 'Set Your Password' %></h3>
    <p style="color: var(--text-muted); margin-bottom: 1.5rem">
      <%= passExist ? 'Update your password to keep your account secure.' : 'Create a password for your account to enable email login.' %>
    </p>

    <form id="passwordChangeForm">
      <div class="form-group">
        <% if(passExist) { %>
          <label>Current Password</label>
          <input
            type="password"
            name="currentPassword"
            placeholder="••••••••"
            required
          />
        <% } else { %>
          <input
            type="hidden"
            name="currentPassword"
            value="isGoogleUser" 
          />
        <% } %>
      </div>

      <div class="form-group">
        <label>New Password</label>
        <input
          type="password"
          id="newPassword"
          name="newPassword"
          placeholder="Min 8 characters"
          required
          minlength="8"
        />
      </div>

      <div class="form-group">
        <label>Confirm New Password</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="Confirm new password"
          required
          minlength="8"
        />
      </div>

      <small id="modalPasswordError" style="color: red; display: block; margin-bottom: 1rem"></small>

      <button type="submit" class="btn btn-primary" style="width: 100%">
        <%= passExist ? 'Update Password' : 'Set Password' %>
      </button>
    </form>
  </div>
</div>

    <!-- Footer -->
    <%- include('../partials/footer') %>
    <script src="/js/user-profile.js"></script>
  </body>
</html>
