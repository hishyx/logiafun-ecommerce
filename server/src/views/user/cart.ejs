<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shopping Cart - logiaFun</title>
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="stylesheet" href="/css/cart.css" />
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

</head>

<body>
  <!-- Header -->
  <%- include('../partials/header.ejs')%>

    <main>
      <div class="cart-container">
        <!-- Cart Items Column -->
        <div class="cart-items-column">
          <div class="cart-header">
            <h1>Shopping Cart</h1>
            <p>You have <%=cartItems.length%> items in your cart</p>
          </div>

          <div class="cart-items">
            <!-- Item 1 -->
            <%cartItems.forEach(item=>{%>
              <div class="cart-item" style="position: relative;">
                <%if(item.product.variants.stock==0 || !item.product.isActive || !item.category.isActive ){%>
                  <div
                    style="position: absolute; inset: 0; background: rgba(255,255,255,0.8); z-index: 10; display: flex; align-items: center; justify-content: center;">
                    <span
                      style="color: red; font-weight: bold; font-size: 1.2rem; background: white; padding: 8px 16px; border-radius: 4px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                      <%= "Product not available" %>
                    </span>
                  </div>
                  <%}%>
                    <div class="cart-item-image">
                      <a href="/products/<%= item.product._id %>">
                        <img src="<%=item.product.variants.images[0]%>" alt="Building Blocks" />
                      </a>
                    </div>
                    <div class="cart-item-details">
                      <div class="cart-item-category">
                        <%=item.category.name%>
                      </div>
                      <a href="#" class="cart-item-title">
                        <%=item.product.name%>
                      </a>
                      <div class="cart-item-price">₹<%=item.discountedPrice || item.product.variants.price%>
                      </div>
                    </div>

                    <div class="quantity-control" data-item-id="<%= item.items._id %>">
                      <button class="qty-btn" aria-label="Decrease quantity">
                        -
                      </button>
                      <input type="text" class="qty-input" value="<%=item.items.quantity%>" readonly />
                      <button class="qty-btn" aria-label="Increase quantity">
                        +
                      </button>
                    </div>

                    <button class="remove-btn" aria-label="Remove item" style="z-index: 20; position: relative;"
                      onclick="removeFromCart(event, '<%= item.items._id %>')">
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                      </svg>
                    </button>
              </div>

              <%})%>

                <!-- Item 2 -->

          </div>
        </div>

        <!-- Summary Column -->
        <div class=" cart-summary-column">
          <div class="cart-summary">
            <div class="summary-title">Order Summary</div>

            <div class="summary-row">
              <span>Subtotal</span>
              <span id="subtotal">₹<%=calculations.subtotal%></span>
            </div>
            <div class="summary-row">
              <span>Discount</span>
              <span id="discount">₹<%=calculations.discount%></span>
            </div>
            <div class="summary-row">
              <span>Shipping</span>
              <span>Free</span>
            </div>

            <div class="summary-row total">
              <span>Total</span>
              <span class="summary-total-price" id="total">₹<%=calculations.total%></span>
            </div>

            <button class="btn btn-primary checkout-btn">
              Proceed to Checkout
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </button>

            <a href="home.html" class="continue-shopping">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
              </svg>
              Continue Shopping
            </a>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
      <script src="/js/user.cart.js"></script>


</body>

</html>