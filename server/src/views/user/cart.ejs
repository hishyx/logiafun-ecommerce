<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shopping Cart - logiaFun</title>
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="stylesheet" href="/css/cart.css" />
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <style>
    .cart-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .clear-cart-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 1.2rem;
      background-color: #fff;
      color: #ef4444;
      border: 1px solid #fee2e2;
      border-radius: var(--radius-md, 8px);
      font-weight: 500;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.2s ease;
      height: fit-content;
      margin-bottom: 0.5rem;
    }

    .clear-cart-btn:hover {
      background-color: #fef2f2;
      border-color: #fecaca;
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(239, 68, 68, 0.08);
    }

    .clear-cart-btn:active {
      transform: translateY(0);
    }

    .clear-cart-btn svg {
      transition: transform 0.2s ease;
    }

    .clear-cart-btn:hover svg {
      transform: scale(1.1);
    }

    @media (max-width: 600px) {
      .clear-cart-btn {
        width: 100%;
        justify-content: center;
      }
    }

    .stock-reduction-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      background-color: #fff7ed;
      color: #c2410c;
      padding: 0.4rem 0.8rem;
      border-radius: 6px;
      font-size: 0.8rem;
      font-weight: 600;
      border: 1px solid #ffedd5;
      margin-top: 0.6rem;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-5px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>

</head>

<body>
  <!-- Header -->
  <%- include('../partials/header.ejs')%>

  <main>
    <div class="cart-container">
      <!-- Cart Items Column -->
      <div class="cart-items-column">
        <div class="cart-header">
          <div>
            <h1>Shopping Cart</h1>
            <p>You have <%=cartItems.length%> items in your cart</p>
          </div>
          <% if (cartItems.length> 0) { %>
          <button class="clear-cart-btn" onclick="ClearEverything()">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              <line x1="10" y1="11" x2="10" y2="17"></line>
              <line x1="14" y1="11" x2="14" y2="17"></line>
            </svg>
            Clear Cart
          </button>
          <% } %>
        </div>

        <div class="cart-items">
          <!-- Item 1 -->
          <%cartItems.forEach(item=>{%>
          <div class="cart-item" style="position: relative;">
            <%if(item.product.variants.stock==0 || !item.product.isActive || !item.category.isActive ){%>
            <div style="position: absolute; inset: 0; background: rgba(255,255,255,0.8); z-index: 10; display: flex; align-items: center; justify-content: center;">
              <span style="color: red; font-weight: bold; font-size: 1.2rem; background: white; padding: 8px 16px; border-radius: 4px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                <%= "Product not available" %>
              </span>
            </div>
            <%}%>
                    <div class="cart-item-image">
                      <a href="/products/<%= item.product._id %>">
            <img src="<%=item.product.variants.images[0]%>" alt="Building Blocks" />
            </a>
          </div>
          <div class="cart-item-details">
            <div class="cart-item-category">
              <%=item.category.name%>
            </div>
            <a href="#" class="cart-item-title">
              <%=item.product.name%>
            </a>
            <div class="cart-item-price">₹<%= Math.round(item.discountedPrice || item.product.variants.price)
                          %>
            </div>

            <% if (item.items.quantityChange) { %>
            <div class="stock-reduction-badge">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z">
                </path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
              Quantity reduced due to limited stock
            </div>
            <% } %>
          </div>

          <div class="quantity-control" data-item-id="<%= item.items._id %>">
            <button class="qty-btn" aria-label="Decrease quantity">
              -
            </button>
            <input type="text" class="qty-input" value="<%=item.items.quantity%>" readonly />
            <button class="qty-btn" aria-label="Increase quantity">
              +
            </button>
          </div>

          <button class="remove-btn" aria-label="Remove item" style="z-index: 20; position: relative;" onclick="removeFromCart(event, '<%= item.items._id %>')">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
          </button>
        </div>

        <%})%>

        <!-- Item 2 -->

      </div>
    </div>

    <!-- Summary Column -->
    <div class=" cart-summary-column">
      <div class="cart-summary">
        <div class="summary-title">Order Summary</div>

        <div class="summary-row">
          <span>Subtotal</span>
          <span id="subtotal">₹<%=calculations.subtotal%></span>
        </div>
        <div class="summary-row">
          <span>Discount</span>
          <span id="discount">₹<%=calculations.discount%></span>
        </div>
        <div class="summary-row">
          <span>Shipping</span>
          <span>Free</span>
        </div>

        <div class="summary-row total">
          <span>Total</span>
          <span class="summary-total-price" id="total">₹<%=calculations.total%></span>
        </div>

        <a href="/user/cart/checkout">
          <button class="btn btn-primary checkout-btn" style="width: 100%;">
            Proceed to Checkout
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </a>

        <a href="home.html" class="continue-shopping">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Continue Shopping
        </a>
      </div>
    </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="/js/user.cart.js"></script>

  <script>
    async function ClearEverything() {

      console.log("reached delete fuction")


      const res = await fetch("/user/cart/clearAll", {
        method: "DELETE"
      })

      if (res.ok) {
        location.reload()
      } else {
        console.log("Semthing wet")
      }

    }

    const stockReductionBadge = document.getElementsByClassName("stock-reduction-badge")[0]

    document.addEventListener("click", () => {
      if (stockReductionBadge) stockReductionBadge.style.display = "none"
    })
  </script>


</body>

</html>