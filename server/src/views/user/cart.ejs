<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopping Cart - logiaFun</title>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/cart.css" />
  </head>
  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs')%>

    <main>
      <div class="cart-container">
        <!-- Cart Items Column -->
        <div class="cart-items-column">
          <div class="cart-header">
            <h1>Shopping Cart</h1>
            <p>You have 2 items in your cart</p>
          </div>

          <div class="cart-items">
            <!-- Item 1 -->
            <div class="cart-item">
              <div class="cart-item-image">
                <img
                  src="/images/temp-products/small-kids-buiding-blocks.png"
                  alt="Building Blocks"
                />
              </div>
              <div class="cart-item-details">
                <div class="cart-item-category">Building Sets</div>
                <a href="#" class="cart-item-title">Building Blocks Set</a>
                <div class="cart-item-price">$39.00</div>
              </div>
              <div class="quantity-control">
                <button class="qty-btn" aria-label="Decrease quantity">
                  -
                </button>
                <input type="text" class="qty-input" value="1" readonly />
                <button class="qty-btn" aria-label="Increase quantity">
                  +
                </button>
              </div>
              <button class="remove-btn" aria-label="Remove item">
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path
                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                  ></path>
                </svg>
              </button>
            </div>

            <!-- Item 2 -->
            <div class="cart-item">
              <div class="cart-item-image">
                <img
                  src="/images/temp-products/rubix-cube.png"
                  alt="Rubik's Cube"
                />
              </div>
              <div class="cart-item-details">
                <div class="cart-item-category">Puzzles</div>
                <a href="#" class="cart-item-title">Rubik's Cube</a>
                <div class="cart-item-price">$15.00</div>
              </div>
              <div class="quantity-control">
                <button class="qty-btn" aria-label="Decrease quantity">
                  -
                </button>
                <input type="text" class="qty-input" value="1" readonly />
                <button class="qty-btn" aria-label="Increase quantity">
                  +
                </button>
              </div>
              <button class="remove-btn" aria-label="Remove item">
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path
                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                  ></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Summary Column -->
        <div class="cart-summary-column">
          <div class="cart-summary">
            <div class="summary-title">Order Summary</div>

            <div class="summary-row">
              <span>Subtotal</span>
              <span>$54.00</span>
            </div>
            <div class="summary-row">
              <span>Shipping</span>
              <span>Free</span>
            </div>
            <div class="summary-row">
              <span>Tax (5%)</span>
              <span>$2.70</span>
            </div>

            <div class="summary-row total">
              <span>Total</span>
              <span class="summary-total-price">$56.70</span>
            </div>

            <button class="btn btn-primary checkout-btn">
              Proceed to Checkout
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </button>

            <a href="home.html" class="continue-shopping">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
              </svg>
              Continue Shopping
            </a>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>
  </body>
</html>
