<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Verify Code</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          sans-serif;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: radial-gradient(circle at top, #e8ecf7, #f8fafc);
      }

      .card {
        background: #ffffff;
        width: 340px;
        padding: 32px 28px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
      }

      h2 {
        margin: 0 0 6px;
        font-weight: 600;
        color: #111827;
      }

      .subtitle {
        color: #6b7280;
        font-size: 0.95rem;
        margin-bottom: 24px;
      }

      .otp-input {
        width: 100%;
        padding: 14px;
        text-align: center;
        font-size: 22px;
        letter-spacing: 10px;
        border: 1px solid #d1d5db;
        border-radius: 10px;
        outline: none;
        transition: 0.2s;
      }

      .otp-input:focus {
        border-color: #4a6cf7;
        box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.15);
      }

      .error {
        color: #dc2626;
        font-size: 0.9rem;
        margin: 12px 0 0;
        min-height: 18px;
      }

      button {
        width: 100%;
        margin-top: 18px;
        padding: 12px;
        background: linear-gradient(135deg, #4a6cf7, #6c8cff);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.2s;
      }

      button:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 15px rgba(74, 108, 247, 0.35);
      }

      .timer {
        margin-top: 16px;
        font-size: 0.9rem;
        color: #6b7280;
      }

      .resend-btn {
        margin-top: 10px;
        background: #e5e7eb;
        color: #374151;
        cursor: not-allowed;
        display: none;
      }

      .resend-btn.enabled {
        background: #4a6cf7;
        color: white;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    <div class="card">
      <h2>Verify code</h2>
      <div class="subtitle">Enter the 4-digit code we sent you</div>

      <form method="POST">
        <input
          class="otp-input"
          type="text"
          name="otp"
          maxlength="4"
          pattern="\d{4}"
          placeholder="0000"
          required
          autofocus
        />

        <div class="error"><%= error %></div>
        <p style="display: none" id="remainingTime"><%= remaining %></p>

        <button type="submit">Verify</button>
      </form>

      <div id="otp-timer" class="timer"></div>

      <button id="resendBtn" class="resend-btn" disabled>Resend code</button>
    </div>

    <script>
      var remaining = Number(
        document.getElementById("remainingTime").textContent,
      );

      const timerEl = document.getElementById("otp-timer");
      const resendBtn = document.getElementById("resendBtn");

      function format(sec) {
        const m = Math.floor(sec / 60);
        const s = sec % 60;
        return `${m}:${s.toString().padStart(2, "0")}`;
      }

      function tick() {
        if (remaining <= 0) {
          timerEl.textContent = "Code expired.";
          resendBtn.style.display = "block";
          resendBtn.disabled = false;
          resendBtn.classList.add("enabled");
          return;
        }

        timerEl.textContent = `Code expires in ${format(remaining)}`;
        remaining--;
        setTimeout(tick, 1000);
      }

      tick();

      resendBtn.addEventListener("click", () => {
        window.location.href = "/auth/resend-otp";
      });
    </script>
  </body>
</html>
