<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Your Account - Sign Up</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/login-signup.css" />
  </head>
  <body>
    <div class="form-section">
      <div class="logo-container">
        <a href="index.html" class="logo">logia<span>Fun</span></a>
      </div>

      <div class="form-container">
        <h1>CREATE YOUR ACCOUNT</h1>
        <p class="subtitle">
          Join LogiaFun to explore educational toys & brain games
        </p>

        <form action="#" method="POST">
          <div class="input-group">
            <label for="name">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Enter your full name"
              required
            />
          </div>

          <div class="input-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>

          <div class="input-group">
            <label for="phone">Phone number</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              placeholder="Enter your phone number"
            />
          </div>

          <div class="input-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              placeholder="*************"
              name="password"
              required
            />
          </div>

          <div class="input-group">
            <label for="confirm-password">Confirm password</label>
            <input
              type="password"
              id="confirm-password"
              placeholder="*************"
              name="confirm_password"
              required
            />
          </div>
          <p style="color: red; margin-bottom: 10px"><%=error%></p>

          <div
            id="signupLoader"
            class="loader"
            style="display: none; margin: 15px auto"
          ></div>

          <button type="submit" id="signupBtn" class="btn-primary">
            Sign Up
          </button>

          <button
            type="button"
            class="btn-google"
            onclick="window.location.href = '/auth/google'"
          >
            <img src="/images/google.png" alt="Google" width="20" />
            Continue with google
          </button>

          <p class="footer-text">
            Already have an account?
            <a href="login.html" style="color: #ff4d4d">Sign in !</a>
          </p>
        </form>
      </div>
    </div>

    <div class="image-section"></div>

    <script>
      const signupForm = document.querySelector("form");
      const signupBtn = document.getElementById("signupBtn");
      const loader = document.getElementById("signupLoader");

      signupForm.addEventListener("submit", () => {
        signupBtn.disabled = true;
        signupBtn.textContent = "Signing up...";
        loader.style.display = "block";
      });
    </script>
  </body>
</html>
